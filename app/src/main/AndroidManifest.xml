<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vivwe.main">

    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.autofocus"/>

    <application
        android:name="com.vivwe.base.app.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >

        <activity android:name=".activity.WellcomeActivity" android:theme="@style/WellcomeTheme" >
            <intent-filter >
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activity.LoginActivity" android:theme="@style/AppTheme" />
        <activity android:name=".activity.RegisterActivity" android:theme="@style/AppTheme" />
        <activity android:name=".activity.MainActivity" android:theme="@style/AppTheme" />

    </application>
</manifest>
