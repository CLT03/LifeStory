<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_error"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:background="@drawable/ra_transparent_btn"
        android:gravity="center"
        android:text="文件同步出错！点击重试~"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/edt_home_dollname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/x46"
        android:layout_marginTop="@dimen/x128"
        android:gravity="center"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:maxLength="10"
        android:singleLine="true"
        android:text="Dameon"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/x47"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_creater_avatar"
        android:layout_width="@dimen/x88"
        android:layout_height="@dimen/x88"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/x142"
        android:layout_marginEnd="@dimen/x40"
        android:background="@drawable/ra_transparent_btn"
        android:src="@mipmap/icon_change_face"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_edit_face"
        android:layout_width="@dimen/x88"
        android:layout_height="@dimen/x88"
        android:layout_below="@id/iv_creater_avatar"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/x28"
        android:background="@drawable/ra_transparent_btn"
        android:src="@mipmap/icon_change_face_camera"
        app:layout_constraintEnd_toEndOf="@+id/iv_creater_avatar"
        app:layout_constraintStart_toStartOf="@+id/iv_creater_avatar"
        app:layout_constraintTop_toBottomOf="@+id/iv_creater_avatar" />

    <ImageView
        android:id="@+id/iv_toassets"
        android:layout_width="@dimen/x88"
        android:layout_height="@dimen/x88"
        android:layout_below="@id/iv_edit_face"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/x28"
        android:background="@drawable/ra_transparent_btn"
        android:src="@mipmap/icon_expression_avatart"
        app:layout_constraintEnd_toEndOf="@+id/iv_edit_face"
        app:layout_constraintStart_toStartOf="@+id/iv_edit_face"
        app:layout_constraintTop_toBottomOf="@+id/iv_edit_face" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="@dimen/x40"
        android:layout_height="@dimen/x40"
        android:layout_marginTop="@dimen/x10"
        android:scaleType="fitXY"
        android:src="@mipmap/icon_like_my"
        app:layout_constraintStart_toStartOf="@+id/edt_home_dollname"
        app:layout_constraintTop_toBottomOf="@+id/edt_home_dollname" />

    <TextView
        android:id="@+id/textView53"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/x10"
        android:text="5210"
        android:textColor="#333333"
        android:textSize="@dimen/x32"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/imageView2" />


</android.support.constraint.ConstraintLayout>