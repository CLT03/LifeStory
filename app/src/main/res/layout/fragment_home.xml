<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.opengl.GLSurfaceView
        android:id="@+id/gl_surface"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/rl_menu"
        android:layout_centerHorizontal="true" />

    <FrameLayout
        android:id="@+id/fl_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/ll_home_menu"></FrameLayout>

    <ImageView
        android:id="@+id/fl_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/ll_home_menu"
        android:src="@color/bg_color" />

    <TextView
        android:id="@+id/edt_home_dollname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x18"
        android:layout_marginTop="@dimen/x24"
        android:background="#04ffffff"
        android:gravity="center"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:maxLength="10"
        android:padding="@dimen/x4"
        android:singleLine="true"
        android:text="Dameon"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/x20" />

    <ImageView
        android:id="@+id/img_home_file"
        android:layout_width="@dimen/x36"
        android:layout_height="@dimen/x36"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/x36"
        android:layout_marginRight="@dimen/x18"
        android:background="@mipmap/icon_change_face" />

    <ImageView
        android:id="@+id/img_home_camera"
        android:layout_width="@dimen/x36"
        android:layout_height="@dimen/x36"
        android:layout_below="@id/img_home_file"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/x12"
        android:layout_marginRight="@dimen/x18"
        android:background="@mipmap/icon_change_face_camera" />


    <TextView
        android:id="@+id/tv_home_downloading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="downloading..."
        android:visibility="gone" />


    <!--<TextView
        android:id="@+id/tv_home_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="载入中..."
        android:textColor="@color/colorGray" />-->

    <TextView
        android:id="@+id/tv_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="文件同步出错！点击重试~"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/ll_home_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/home_func"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/tv_home_figure"
            android:layout_width="@dimen/x58"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x16"
            android:background="@drawable/ra_transparent_btn"
            android:orientation="vertical"
            android:paddingLeft="@dimen/x16"
            android:paddingTop="@dimen/x4"
            android:paddingRight="@dimen/x16"
            android:paddingBottom="@dimen/x4">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/x30"
                android:src="@mipmap/icon_visualize" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="形象"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/x10" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tv_home_story"
            android:layout_width="@dimen/x58"
            android:layout_height="wrap_content"
            android:background="@drawable/ra_transparent_btn"
            android:orientation="vertical"
            android:paddingLeft="@dimen/x16"
            android:paddingTop="@dimen/x4"
            android:paddingRight="@dimen/x16"
            android:paddingBottom="@dimen/x4">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/x30"
                android:src="@mipmap/icon_history" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="故事"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/x10" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tv_home_phiz"
            android:layout_width="@dimen/x58"
            android:layout_height="wrap_content"
            android:background="@drawable/ra_transparent_btn"
            android:orientation="vertical"
            android:paddingLeft="@dimen/x16"
            android:paddingTop="@dimen/x4"
            android:paddingRight="@dimen/x16"
            android:paddingBottom="@dimen/x4">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/x30"
                android:src="@mipmap/icon_emjoy" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="表情"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/x10" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>