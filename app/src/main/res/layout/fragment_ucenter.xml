                    app:layout_constraintBottom_toBottomOf="@+id/tv_recommend"
                    app:layout_constraintStart_toStartOf="@+id/tv_recommend"
                    app:layout_constraintTop_toBottomOf="@+id/view4" />

                <ImageView
                    android:id="@+id/imageView16"
                    android:layout_width="@dimen/x48"
                    android:layout_height="@dimen/x48"
                    android:layout_marginRight="@dimen/x16"
                    android:src="@mipmap/icon_enter_ucenter"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_recommend"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tv_recommend" />

                <View
                    android:id="@+id/view5"
                    android:layout_width="@dimen/x720"
                    android:layout_height="@dimen/x2"
                    android:background="#F2F2F2"
                    app:layout_constraintBottom_toBottomOf="@id/tv_recommend"
                    app:layout_constraintEnd_toEndOf="parent" />


                <TextView
                    android:id="@+id/tv_author_ucenter"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/x88"
                    android:background="@drawable/ra_white_btn"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/x120"
                    android:paddingRight="@dimen/x106"
                    android:text="创作者中心"
                    android:textColor="#191919"
