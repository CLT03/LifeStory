                    android:layout_height="@dimen/x162"
                    android:layout_marginLeft="@dimen/x20"
                    android:layout_marginTop="@dimen/x20"
                    android:background="#ffffff"
                    android:overScrollMode="never"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView37" />

                <android.support.constraint.Barrier
                    android:id="@+id/barrier"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:barrierDirection="bottom"
                    app:constraint_referenced_ids="textView23,recycler_view_history" />


                <TextView
                    android:id="@+id/tv_video"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/x88"
                    android:layout_marginTop="@dimen/x52"
                    android:background="@drawable/ra_white_btn"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/x120"
                    android:paddingRight="@dimen/x106"
                    android:text="我的视频"
                    android:textColor="#191919"
                    android:textSize="@dimen/x28"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/barrier" />

