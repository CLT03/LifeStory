                    android:id="@+id/imageView17"
                    android:layout_width="@dimen/x48"
                    android:layout_height="@dimen/x48"
                    android:layout_marginLeft="@dimen/x50"
                    android:padding="@dimen/x6"
                    android:src="@mipmap/icon_author_ucenter"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_author_ucenter"
                    app:layout_constraintStart_toStartOf="@+id/tv_author_ucenter"
                    app:layout_constraintTop_toTopOf="@+id/tv_author_ucenter" />

