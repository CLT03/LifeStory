                    app:layout_constraintTop_toBottomOf="@+id/tv_id" />

                <TextView
                    android:id="@+id/tv_attention"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ra_transparent_btn"
                    android:paddingLeft="@dimen/x6"
                    android:text="954"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/x32"
                    app:layout_constraintBottom_toBottomOf="@+id/iv_attention"
                    app:layout_constraintStart_toEndOf="@+id/iv_attention"
                    app:layout_constraintTop_toTopOf="@+id/iv_attention" />

                <ImageView
                    android:id="@+id/iv_fans"
