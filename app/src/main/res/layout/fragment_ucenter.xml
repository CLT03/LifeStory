<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="@dimen/x138"
        android:background="@drawable/app_bg_h"
        android:gravity="center"
        android:paddingTop="@dimen/x50"
        android:text="个人中心"
        android:textColor="#ffffff"
        android:textSize="@dimen/x32"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_setting"
        android:layout_width="@dimen/x88"
        android:layout_height="@dimen/x88"
        android:layout_marginLeft="@dimen/x6"
        android:background="@drawable/ra_transparent_btn"
        android:padding="@dimen/x20"
        android:src="@mipmap/icon_setting_ucenter"
        app:layout_constraintBottom_toBottomOf="@+id/tv_title"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/iv_notice"
        android:layout_width="@dimen/x88"
        android:layout_height="@dimen/x88"
        android:layout_marginRight="@dimen/x16"
        android:padding="@dimen/x20"
        android:background="@drawable/ra_transparent_btn"
        android:src="@mipmap/icon_notice_ucenter"
        app:layout_constraintBottom_toBottomOf="@+id/tv_title"
        app:layout_constraintEnd_toEndOf="@+id/tv_title" />

    <TextView
        android:id="@+id/tv_notice_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x16"
        android:layout_marginRight="@dimen/x10"
        android:background="@drawable/r7_red_normal"
        android:paddingStart="@dimen/x8"
        android:paddingTop="@dimen/x2"
        android:paddingRight="@dimen/x8"
        android:paddingBottom="@dimen/x2"
