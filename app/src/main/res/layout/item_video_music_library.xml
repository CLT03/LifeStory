<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff">

    <ImageView
        android:id="@+id/tv_cover"
        android:layout_width="0dp"
        android:layout_height="@dimen/x204"
        android:paddingLeft="@dimen/x24"
        android:paddingTop="@dimen/x30"
        android:paddingEnd="@dimen/x582"
        android:paddingBottom="@dimen/x30"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_background" />

    <ImageView
        android:id="@+id/iv_play"
        android:layout_width="@dimen/x48"
        android:layout_height="@dimen/x48"
        android:layout_marginLeft="@dimen/x72"
        app:layout_constraintBottom_toBottomOf="@+id/tv_cover"
        app:layout_constraintStart_toStartOf="@+id/tv_cover"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/icon_play_video" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x194"
        android:layout_marginTop="@dimen/x56"
        android:text="去年夏天"
        android:textColor="#49494A"
        android:textSize="@dimen/x32"
        app:layout_constraintStart_toStartOf="@+id/tv_cover"
        app:layout_constraintTop_toTopOf="@+id/tv_cover" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x10"
        android:text="00:30"
        android:textColor="#c2c2c2"
        android:textSize="@dimen/x24"
        app:layout_constraintStart_toStartOf="@+id/tv_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_name" />

    <View
        android:id="@+id/view30"
        android:layout_width="@dimen/x700"
        android:layout_height="@dimen/x2"
        android:background="#F4F4F5"
        app:layout_constraintBottom_toTopOf="@+id/btn_use"
        app:layout_constraintEnd_toEndOf="@+id/tv_cover"
        app:layout_constraintStart_toStartOf="@+id/tv_cover" />

    <View
        android:id="@+id/view29"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/x196"
        android:background="#373842"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_cover" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="0dp"
        android:layout_height="@dimen/x24"
        android:layout_marginLeft="@dimen/x32"
        android:layout_marginRight="@dimen/x158"
        android:outlineAmbientShadowColor="#B35CFF"
        app:layout_constraintBottom_toBottomOf="@+id/view29"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/view29"
        app:layout_constraintTop_toTopOf="@+id/view29" />

    <TextView
        android:id="@+id/tv_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/x8"
        android:text="00:00"
        android:textColor="#ffffff"
        android:textSize="@dimen/x24"
        app:layout_constraintBottom_toTopOf="@+id/seekBar"
        app:layout_constraintStart_toStartOf="@+id/seekBar" />

    <TextView
        android:id="@+id/tv_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/x8"
        android:text="00:27"
        android:textColor="#ffffff"
        android:textSize="@dimen/x24"
        app:layout_constraintBottom_toTopOf="@+id/seekBar"
        app:layout_constraintEnd_toEndOf="@+id/seekBar" />

    <Button
        android:id="@+id/btn_use"
        android:layout_width="@dimen/x108"
        android:layout_height="@dimen/x56"
        android:layout_marginRight="@dimen/x16"
        android:background="@drawable/sign_btn"
        android:text="使用"
        android:textColor="#ffffff"
        android:textSize="@dimen/x28"
        app:layout_constraintBottom_toBottomOf="@+id/view29"
        app:layout_constraintEnd_toEndOf="@+id/view29"
        app:layout_constraintTop_toTopOf="@+id/view29" />

    <android.support.constraint.Group
        android:id="@+id/group_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="seekBar,tv_end,tv_start,view29,btn_use" />

</android.support.constraint.ConstraintLayout>