<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff">


    <ImageView
        android:id="@+id/iv_cover"
        android:layout_width="@dimen/x144"
        android:layout_height="@dimen/x144"
        android:layout_marginStart="@dimen/x24"
        android:layout_marginTop="@dimen/x30"
        android:layout_marginBottom="@dimen/x30"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@mipmap/icon_video_music" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/x26"
        android:layout_marginTop="@dimen/x61"
        android:text="去年夏天"
        android:textColor="#49494A"
        android:textSize="@dimen/x32"
        app:layout_constraintStart_toEndOf="@+id/iv_cover"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x10"
        android:text="00:30"
        android:textColor="#c2c2c2"
        android:textSize="@dimen/x24"
        app:layout_constraintStart_toStartOf="@+id/tv_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_name" />

    <View
        android:id="@+id/view30"
        android:layout_width="@dimen/x700"
        android:layout_height="@dimen/x2"
        android:background="#F4F4F5"
        app:layout_constraintBottom_toBottomOf="@+id/tv_cover"
        app:layout_constraintEnd_toEndOf="@+id/tv_cover"
        app:layout_constraintStart_toStartOf="@+id/tv_cover" />
</android.support.constraint.ConstraintLayout>