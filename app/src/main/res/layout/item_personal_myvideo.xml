<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/x558"
    android:background="#ffffff">


    <VideoView
        android:id="@+id/videoView"
        android:layout_width="0dp"
        android:layout_height="@dimen/x400"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_choose"
        android:layout_width="@dimen/x60"
        android:layout_height="@dimen/x60"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginTop="@dimen/x20"
        android:padding="@dimen/x10"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@+id/videoView"
        app:layout_constraintTop_toTopOf="@+id/videoView"
        app:srcCompat="@mipmap/icon_checked" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/x28"
        android:layout_marginBottom="@dimen/x30"
        android:text="2019-06-12"
        android:textColor="#ffffff"
        android:textSize="@dimen/x26"
        app:layout_constraintBottom_toBottomOf="@+id/videoView"
        app:layout_constraintEnd_toEndOf="@+id/videoView" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x16"
        android:ellipsize="end"
        android:paddingRight="@dimen/x4"
        android:singleLine="true"
        android:text="旅行日记，难忘的回忆录难忘的回忆录难忘的"
        android:textColor="#191919"
        android:textSize="@dimen/x28"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/iv_edit"
        app:layout_constraintStart_toStartOf="@+id/videoView"
        app:layout_constraintTop_toBottomOf="@+id/videoView" />

    <ImageView
        android:id="@+id/iv_edit"
        android:layout_width="@dimen/x64"
        android:layout_height="@dimen/x66"
        android:layout_marginRight="@dimen/x74"
        android:padding="@dimen/x16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/videoView"
        app:srcCompat="@mipmap/icon_edit_video" />

    <ImageView
        android:id="@+id/tv_download"
        android:layout_width="@dimen/x62"
        android:layout_height="@dimen/x60"
        android:layout_marginTop="@dimen/x10"
        android:padding="@dimen/x10"
        app:layout_constraintStart_toStartOf="@+id/tv_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_content"
        app:srcCompat="@mipmap/icon_download_video" />

    <ImageView
        android:id="@+id/iv_share"
        android:layout_width="@dimen/x62"
        android:layout_height="@dimen/x60"
        android:layout_marginLeft="@dimen/x40"
        android:layout_marginTop="@dimen/x10"
        android:padding="@dimen/x10"
        app:layout_constraintStart_toEndOf="@+id/tv_download"
        app:layout_constraintTop_toBottomOf="@+id/tv_content"
        app:srcCompat="@mipmap/icon_share_video" />

</android.support.constraint.ConstraintLayout>