<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/x250"
    android:layout_height="@dimen/x402"
    android:background="#ffffff">


    <ImageView
        android:id="@+id/iv_cover"
        android:layout_width="@dimen/x248"
        android:layout_height="@dimen/x400"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_background" />

    <ImageView
        android:id="@+id/imageView45"
        android:layout_width="@dimen/x28"
        android:layout_height="@dimen/x28"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginBottom="@dimen/x16"
        app:layout_constraintBottom_toBottomOf="@+id/iv_cover"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@mipmap/icon_video_play_count" />

    <TextView
        android:id="@+id/tv_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5484"
        android:textColor="#ffffff"
        android:textSize="@dimen/x24"
        app:layout_constraintBottom_toBottomOf="@+id/imageView45"
        app:layout_constraintStart_toEndOf="@+id/imageView45"
        app:layout_constraintTop_toTopOf="@+id/imageView45" />

    <ImageView
        android:id="@+id/iv_type"
        android:layout_width="@dimen/x28"
        android:layout_height="@dimen/x28"
        android:layout_marginRight="@dimen/x14"
        android:layout_marginBottom="@dimen/x16"
        app:layout_constraintBottom_toBottomOf="@+id/iv_cover"
        app:layout_constraintEnd_toEndOf="@+id/iv_cover"
        app:srcCompat="@mipmap/icon_video_protect" />
</android.support.constraint.ConstraintLayout>