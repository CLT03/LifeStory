<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="@dimen/x88"
        android:background="#ffffff"
        android:gravity="center"
        android:text="举报与反馈"
        android:textColor="#191919"
        android:textSize="@dimen/x32"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="@dimen/x88"
        android:layout_height="0dp"
        android:background="@drawable/ra_white_btn"
        android:paddingLeft="@dimen/x34"
        android:paddingTop="@dimen/x30"
        android:paddingRight="@dimen/x36"
        android:paddingBottom="@dimen/x26"
        app:layout_constraintBottom_toBottomOf="@+id/tv_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_title"
        app:srcCompat="@mipmap/icon_back_black" />

    <TextView
        android:id="@+id/tv_submit"
        android:layout_width="@dimen/x100"
        android:layout_height="@dimen/x56"
        android:layout_marginRight="@dimen/x15"
        android:background="@drawable/ra_white_btn"
        android:gravity="center"
        android:text="提交"
        android:textColor="#191919"
        android:textSize="@dimen/x28"
        app:layout_constraintBottom_toBottomOf="@+id/tv_title"
        app:layout_constraintEnd_toEndOf="@+id/tv_title"
        app:layout_constraintTop_toTopOf="@+id/tv_title" />

    <TextView
        android:id="@+id/textView91"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/x32"
        android:layout_marginTop="@dimen/x30"
        android:text="@string/activity_video_report"
        android:textSize="@dimen/x28"
        android:textColor="#676767"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title" />

    <View
        android:id="@+id/view32"
        android:layout_width="@dimen/x688"
        android:layout_height="@dimen/x320"
        android:layout_marginTop="@dimen/x22"
        android:background="@drawable/ra_white_stroke_normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView91" />

    <ImageView
        android:id="@+id/iv_illegal"
        android:layout_width="@dimen/x56"
        android:layout_height="@dimen/x56"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginTop="@dimen/x12"
        android:padding="@dimen/x14"
        app:layout_constraintStart_toStartOf="@+id/view32"
        app:layout_constraintTop_toTopOf="@+id/view32"
        app:srcCompat="@mipmap/icon_report_checked" />

    <TextView
        android:id="@+id/textView92"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="违法反动"
        android:textColor="#000000"
        android:textSize="@dimen/x28"
        app:layout_constraintBottom_toBottomOf="@+id/iv_illegal"
        app:layout_constraintStart_toEndOf="@+id/iv_illegal"
        app:layout_constraintTop_toTopOf="@+id/iv_illegal" />

    <ImageView
        android:id="@+id/iv_yellow"
        android:layout_width="@dimen/x56"
        android:layout_height="@dimen/x56"
        android:layout_marginLeft="@dimen/x176"
        android:layout_marginTop="@dimen/x12"
        android:padding="@dimen/x14"
        app:layout_constraintStart_toEndOf="@+id/textView92"
        app:layout_constraintTop_toTopOf="@+id/view32"
        app:srcCompat="@mipmap/icon_report_check" />

    <TextView
        android:id="@+id/textView99"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="低俗色情"
        android:textColor="#000000"
        android:textSize="@dimen/x28"
        app:layout_constraintBottom_toBottomOf="@+id/iv_yellow"
        app:layout_constraintStart_toEndOf="@+id/iv_yellow"
        app:layout_constraintTop_toTopOf="@+id/iv_yellow" />

    <ImageView
        android:id="@+id/iv_gambling"
        android:layout_width="@dimen/x56"
        android:layout_height="@dimen/x56"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginTop="@dimen/x24"
        android:padding="@dimen/x14"
        app:layout_constraintStart_toStartOf="@+id/view32"
        app:layout_constraintTop_toBottomOf="@+id/iv_illegal"
        app:srcCompat="@mipmap/icon_report_check" />

    <TextView
        android:id="@+id/textView100"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="赌博诈骗"
        android:textColor="#000000"
        android:textSize="@dimen/x28"
        app:layout_constraintBottom_toBottomOf="@+id/iv_gambling"
        app:layout_constraintStart_toEndOf="@+id/iv_gambling"
        app:layout_constraintTop_toTopOf="@+id/iv_gambling" />

    <ImageView
        android:id="@+id/iv_violence"
        android:layout_width="@dimen/x56"
        android:layout_height="@dimen/x56"
        android:padding="@dimen/x14"
        app:layout_constraintStart_toStartOf="@+id/iv_yellow"
        app:layout_constraintTop_toTopOf="@+id/iv_gambling"
        app:srcCompat="@mipmap/icon_report_check" />

    <TextView
        android:id="@+id/textView101"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="血腥暴力"
        android:textColor="#000000"
        android:textSize="@dimen/x28"
        app:layout_constraintBottom_toBottomOf="@+id/iv_violence"
        app:layout_constraintStart_toEndOf="@+id/iv_violence"
        app:layout_constraintTop_toTopOf="@+id/iv_violence" />

    <ImageView
        android:id="@+id/iv_tort"
        android:layout_width="@dimen/x56"
        android:layout_height="@dimen/x56"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginTop="@dimen/x24"
        android:padding="@dimen/x14"
        app:layout_constraintStart_toStartOf="@+id/view32"
        app:layout_constraintTop_toBottomOf="@+id/iv_gambling"
        app:srcCompat="@mipmap/icon_report_check" />

    <TextView
        android:id="@+id/textView102"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="侵权行为"
        android:textColor="#000000"
        android:textSize="@dimen/x28"
        app:layout_constraintBottom_toBottomOf="@+id/iv_tort"
        app:layout_constraintStart_toEndOf="@+id/iv_tort"
        app:layout_constraintTop_toTopOf="@+id/iv_tort" />

    <ImageView
        android:id="@+id/iv_rumor"
        android:layout_width="@dimen/x56"
        android:layout_height="@dimen/x56"
        android:padding="@dimen/x14"
        app:layout_constraintStart_toStartOf="@+id/iv_violence"
        app:layout_constraintTop_toTopOf="@+id/iv_tort"
        app:srcCompat="@mipmap/icon_report_check" />

    <TextView
        android:id="@+id/textView103"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="虚假谣言"
        android:textColor="#000000"
        android:textSize="@dimen/x28"
        app:layout_constraintBottom_toBottomOf="@+id/iv_rumor"
        app:layout_constraintStart_toEndOf="@+id/iv_rumor"
        app:layout_constraintTop_toTopOf="@+id/iv_rumor" />

    <ImageView
        android:id="@+id/iv_other"
        android:layout_width="@dimen/x56"
        android:layout_height="@dimen/x56"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginTop="@dimen/x24"
        android:padding="@dimen/x14"
        app:layout_constraintStart_toStartOf="@+id/view32"
        app:layout_constraintTop_toBottomOf="@+id/iv_tort"
        app:srcCompat="@mipmap/icon_report_check" />

    <TextView
        android:id="@+id/textView104"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="其他"
        android:textColor="#000000"
        android:textSize="@dimen/x28"
        app:layout_constraintBottom_toBottomOf="@+id/iv_other"
        app:layout_constraintStart_toEndOf="@+id/iv_other"
        app:layout_constraintTop_toTopOf="@+id/iv_other" />

    <TextView
        android:id="@+id/textView105"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/x32"
        android:layout_marginTop="@dimen/x230"
        android:text="更多问题及建议"
        android:textColor="#676767"
        android:textSize="@dimen/x28"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view32" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="@dimen/x688"
        android:layout_height="@dimen/x270"
        android:layout_marginTop="@dimen/x20"
        android:background="@drawable/ra_white_stroke_normal"
        android:hint="请描述问题或建议"
        android:paddingLeft="@dimen/x24"
        android:paddingTop="@dimen/x28"
        android:paddingRight="@dimen/x24"
        android:gravity="top"
        android:maxLength="200"
        android:paddingBottom="@dimen/x28"
        android:textColor="#191919"
        android:textColorHint="#979797"
        android:textSize="@dimen/x28"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView105" />

    <TextView
        android:id="@+id/tv_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/x8"
        android:layout_marginBottom="@dimen/x6"
        android:text="4-200"
        android:textColor="#666666"
        android:textSize="@dimen/x24"
        app:layout_constraintBottom_toBottomOf="@+id/editText"
        app:layout_constraintEnd_toEndOf="@+id/editText" />


</android.support.constraint.ConstraintLayout>