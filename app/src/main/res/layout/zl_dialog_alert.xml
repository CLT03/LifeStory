<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/transparent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/x300"
        android:layout_height="wrap_content"
        android:background="@drawable/r8_white_normal"
        android:orientation="vertical"
        android:padding="@dimen/x8">


        <TextView
            android:id="@+id/dialog_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/x12"
            android:paddingLeft="@dimen/x4"
            android:paddingRight="@dimen/x4"
            android:text="@string/prompt_system_tip"
            android:textColor="#333333"
            android:textSize="@dimen/x16"
            android:textStyle="bold" />


        <RelativeLayout
            android:id="@+id/rl_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#a8ffffff"
            android:orientation="vertical">


            <TextView
                android:id="@+id/dialog_message_tv"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/x12"
                android:visibility="gone"
                android:paddingRight="@dimen/x12"
                android:text="再连续登陆25天，就可以变身QQ达人。退出QQ可能会使你现有记录归零，确定退出？"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/x14"

                />

            <EditText
                android:id="@+id/dialog_message_zedt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x12"
                android:layout_marginRight="@dimen/x12"
                android:gravity="left|center_vertical"
                android:hint="请输入内容"
                android:maxLength="120"
                android:background="@drawable/r8_white_normal"
                android:maxLines="4"
                android:text="asdfasd"
                android:paddingBottom="@dimen/x8"
                android:textColor="@color/colorBlack"
                android:textColorHint="#ababab"
                android:textSize="@dimen/x14"
                android:visibility="visible" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x12"
            android:gravity="right"
            android:orientation="horizontal"
            android:padding="@dimen/x8">


            <Button
                android:id="@+id/btn_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ra_white_btn"
                android:gravity="center"
                android:padding="@dimen/x4"
                android:text="确定"
                android:textColor="@color/colorPrimaryBlue"
                android:textSize="@dimen/x14" />

            <Button
                android:id="@+id/btn_other"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x8"
                android:background="@drawable/ra_white_btn"
                android:gravity="center"
                android:padding="@dimen/x4"
                android:text="考虑一下"
                android:textColor="@color/colorPrimaryBlue"
                android:textSize="@dimen/x14" />

            <Button
                android:id="@+id/btn_opt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x8"
                android:background="@drawable/ra_white_btn"
                android:gravity="center"
                android:padding="@dimen/x4"
                android:text="考虑一下"
                android:textColor="@color/colorPrimaryBlue"
                android:textSize="@dimen/x14" />

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x8"
                android:background="@drawable/ra_white_btn"
                android:gravity="center"
                android:padding="@dimen/x4"
                android:text="取消"
                android:textColor="@color/colorPrimaryBlue"
                android:textSize="@dimen/x14"
                android:visibility="visible" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>