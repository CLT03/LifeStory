<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#33000000"
    android:gravity="center"
    android:orientation="vertical">

    <View
        android:id="@+id/v_content"
        android:layout_width="@dimen/x540"
        android:layout_height="@dimen/x270"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/r30_white_alert"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="@dimen/x540"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x30"
        android:gravity="center"
        android:text="确认删除视频吗？"
        android:textColor="#333333"
        android:textSize="@dimen/x34"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/v_content"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/v_content"
        app:layout_constraintTop_toTopOf="@+id/v_content" />

    <TextView
        android:id="@+id/tv_message"
        android:layout_width="@dimen/x540"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x18"
        android:gravity="center"
        android:paddingLeft="@dimen/x12"
        android:paddingRight="@dimen/x12"
        android:text="删除后不可恢复"
        android:textColor="#888888"

        android:textSize="@dimen/x30"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="@+id/v_content"
        app:layout_constraintStart_toStartOf="@+id/v_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_title" />

    <View
        android:id="@+id/view24"
        android:layout_width="@dimen/x540"
        android:layout_height="0.5dp"
        android:background="#DCDEE3"
        app:layout_constraintBottom_toTopOf="@+id/tv_cancel"
        app:layout_constraintEnd_toEndOf="@+id/v_content"
        app:layout_constraintStart_toStartOf="@+id/tv_message" />

    <View
        android:id="@+id/view25"
        android:layout_width="0.5dp"
        android:layout_height="@dimen/x100"
        android:background="#DCDEE3"
        app:layout_constraintBottom_toBottomOf="@+id/v_content"
        app:layout_constraintEnd_toEndOf="@+id/v_content"
        app:layout_constraintStart_toStartOf="@+id/v_content" />

    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="0dp"
        android:layout_height="@dimen/x100"
        android:background="@drawable/r30_white_left_btn"
        android:gravity="center"
        android:text="取消"
        android:textColor="#000000"
        android:textSize="@dimen/x32"
        app:layout_constraintBottom_toBottomOf="@+id/v_content"
        app:layout_constraintEnd_toStartOf="@+id/view25"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="@+id/v_content" />

    <TextView
        android:id="@+id/tv_ok"
        android:layout_width="0dp"
        android:layout_height="@dimen/x100"
        android:background="@drawable/r30_white_right_btn"
        android:gravity="center"
        android:text="删除"
        android:textColor="#108EE9"
        android:textSize="@dimen/x32"
        app:layout_constraintBottom_toBottomOf="@+id/v_content"
        app:layout_constraintEnd_toEndOf="@+id/v_content"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@+id/view25" />


</android.support.constraint.ConstraintLayout>