<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/x378"
    android:layout_height="@dimen/x710"
    android:background="#ffffff">


    <ImageView
        android:id="@+id/iv_cover"
        android:layout_width="@dimen/x374"
        android:layout_height="@dimen/x708"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/x84"
        android:paddingLeft="@dimen/x20"
        android:paddingRight="@dimen/x20"
        android:singleLine="true"
        android:ellipsize="end"
        android:textColor="#ffffff"
        android:textSize="@dimen/x32"
        android:textStyle="bold"
        android:text="为什么漂亮的女生为什么漂亮的女生为什么漂亮的女生"
        app:layout_constraintBottom_toBottomOf="@+id/iv_cover"
        app:layout_constraintEnd_toEndOf="@+id/iv_cover"
        app:layout_constraintStart_toStartOf="@+id/iv_cover" />

    <ImageView
        android:id="@+id/iv_head"
        android:layout_width="@dimen/x48"
        android:layout_height="@dimen/x48"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginTop="@dimen/x20"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        android:src="@mipmap/icon_logo_default" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="@dimen/x160"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x10"
        android:text="小逗比是我小逗比是我小逗比是我"
        android:singleLine="true"
        android:ellipsize="end"
        android:textSize="@dimen/x24"
        android:textColor="#ffffff"
        app:layout_constraintBottom_toBottomOf="@+id/iv_head"
        app:layout_constraintStart_toEndOf="@+id/iv_head"
        app:layout_constraintTop_toTopOf="@+id/iv_head" />

    <ImageView
        android:id="@+id/imageView30"
        android:layout_width="@dimen/x28"
        android:layout_height="@dimen/x28"
        android:layout_marginLeft="@dimen/x18"
        app:layout_constraintBottom_toBottomOf="@+id/tv_name"
        app:layout_constraintStart_toEndOf="@+id/tv_name"
        app:layout_constraintTop_toTopOf="@+id/tv_name"
        android:src="@mipmap/icon_play_video" />

    <TextView
        android:id="@+id/tv_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:paddingLeft="@dimen/x2"
        android:singleLine="true"
        android:text="54841111"
        android:textColor="#ffffff"
        android:textSize="@dimen/x24"
        app:layout_constraintBottom_toBottomOf="@+id/imageView30"
        app:layout_constraintEnd_toEndOf="@+id/tv_title"
        app:layout_constraintStart_toEndOf="@+id/imageView30"
        app:layout_constraintTop_toTopOf="@+id/imageView30" />
</android.support.constraint.ConstraintLayout>