<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fafafa">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="@dimen/x88"
        android:background="#ffffff"
        android:gravity="center"
        android:text="申请成为创作者"
        android:textColor="#191919"
        android:textSize="@dimen/x32"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="@dimen/x88"
        android:layout_height="0dp"
        android:background="@drawable/ra_white_btn"
        android:paddingLeft="@dimen/x34"
        android:paddingTop="@dimen/x30"
        android:paddingRight="@dimen/x36"
        android:paddingBottom="@dimen/x26"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_title"
        app:srcCompat="@mipmap/icon_back_black" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="0dp"
        android:layout_height="@dimen/x74"
        android:background="#FAFAFA"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/x30"
        android:text="请确保姓名和身份证信息一致（*为必填）"
        android:textColor="#a6a6a6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="0dp"
        android:layout_height="@dimen/x86"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/x30"
        android:text="@string/activity_personal_author_apply_name"
        android:textColor="#000000"
        android:textSize="@dimen/x28"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <EditText
        android:id="@+id/edt_name"
        android:layout_width="@dimen/x540"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/x188"
        android:background="#ffffff"
        android:hint="请输入真实姓名"
        android:textColor="#000000"
        android:textColorHint="#a6a6a6"
        android:textSize="@dimen/x28"
        app:layout_constraintBottom_toBottomOf="@+id/textView4"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toTopOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="0dp"
        android:layout_height="@dimen/x86"
        android:layout_marginTop="@dimen/x2"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/x30"
        android:text="@string/activity_personal_author_apply_phone"
        android:textColor="#000000"
        android:textSize="@dimen/x28"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <EditText
        android:id="@+id/edt_phone"
        android:layout_width="@dimen/x540"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/x188"
        android:background="#ffffff"
        android:hint="请输入手机号"
        android:textColor="#000000"
        android:textColorHint="#a6a6a6"
        android:textSize="@dimen/x28"
        app:layout_constraintBottom_toBottomOf="@+id/textView5"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toTopOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="0dp"
        android:layout_height="@dimen/x86"
        android:layout_marginTop="@dimen/x2"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/x30"
        android:text="@string/activity_personal_author_apply_id_card"
        android:textColor="#000000"
        android:textSize="@dimen/x28"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <EditText
        android:id="@+id/edt_id_card"
        android:layout_width="@dimen/x540"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/x188"
        android:background="#ffffff"
        android:hint="请输入身份证号"
        android:textColor="#000000"
        android:textColorHint="#a6a6a6"
        android:textSize="@dimen/x28"
        app:layout_constraintBottom_toBottomOf="@+id/textView7"
        app:layout_constraintStart_toStartOf="@+id/textView7"
        app:layout_constraintTop_toTopOf="@+id/textView7" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="0dp"
        android:layout_height="@dimen/x86"
        android:layout_marginTop="@dimen/x2"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/x30"
        android:text="@string/activity_personal_author_apply_alipay"
        android:textColor="#000000"
        android:textSize="@dimen/x28"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <EditText
        android:id="@+id/edt_bankcard"
        android:layout_width="@dimen/x540"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/x188"
        android:background="#ffffff"
        android:hint="请输入银行卡号"
        android:textColor="#000000"
        android:textColorHint="#a6a6a6"
        android:textSize="@dimen/x28"
        app:layout_constraintBottom_toBottomOf="@+id/textView8"
        app:layout_constraintStart_toStartOf="@+id/textView8"
        app:layout_constraintTop_toTopOf="@+id/textView8" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="0dp"
        android:layout_height="@dimen/x86"
        android:layout_marginTop="@dimen/x2"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/x30"
        android:text="@string/activity_personal_author_apply_mail"
        android:textColor="#000000"
        android:textSize="@dimen/x28"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <EditText
        android:id="@+id/edt_mail"
        android:layout_width="@dimen/x540"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/x188"
        android:background="#ffffff"
        android:hint="请输入邮箱"
        android:textColor="#000000"
        android:textColorHint="#a6a6a6"
        android:textSize="@dimen/x28"
        app:layout_constraintBottom_toBottomOf="@+id/textView9"
        app:layout_constraintStart_toStartOf="@+id/textView9"
        app:layout_constraintTop_toTopOf="@+id/textView9" />

    <ImageView
        android:id="@+id/iv_upload_id_card"
        android:layout_width="@dimen/x336"
        android:layout_height="@dimen/x220"
        android:layout_marginLeft="@dimen/x30"
        android:background="@mipmap/icon_idcard_front"
        android:layout_marginTop="@dimen/x60"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_mail" />

    <ImageView
        android:id="@+id/iv_upload_id_card_back"
        android:layout_width="@dimen/x336"
        android:layout_height="@dimen/x220"
        android:layout_marginEnd="@dimen/x30"
        android:background="@mipmap/icon_idcard_obverse"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_upload_id_card" />

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="@dimen/x686"
        android:layout_height="@dimen/x88"
        android:layout_marginBottom="@dimen/x32"
        android:background="@drawable/sign_btn"
        android:paddingBottom="@dimen/x16"
        android:text="提交申请"
        android:textColor="#ffffff"
        android:textSize="@dimen/x32"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</android.support.constraint.ConstraintLayout>