<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ebebeb">

    <TextView
        android:id="@+id/textView73"
        android:layout_width="@dimen/x174"
        android:layout_height="@dimen/x44"
        android:layout_marginTop="@dimen/x28"
        android:background="@drawable/r2_white_normal"
        android:gravity="center"
        android:text="3月7日 13:06"
        android:textColor="#ffffff"
        android:textSize="@dimen/x24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView49"
        android:layout_width="@dimen/x614"
        android:layout_height="@dimen/x348"
        android:layout_marginTop="@dimen/x26"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView73"
        app:srcCompat="@drawable/app_bg_h" />

    <TextView
        android:id="@+id/textView75"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:ellipsize="end"
        android:maxLines="3"
        android:paddingLeft="@dimen/x16"
        android:paddingTop="@dimen/x12"
        android:paddingRight="@dimen/x16"
        android:paddingBottom="@dimen/x14"
        android:text="这是文章的标题，超出后以省略号显示。这是文章的标题，超出后以省略号显示。这是文章的标题，超出后以省略号显示。这是文章的标题，超出后以省略号显示。这是文章的标题，超出后以省略号显示。"
        android:textColor="#191919"
        android:textSize="@dimen/x28"
        app:layout_constraintEnd_toEndOf="@+id/imageView49"
        app:layout_constraintStart_toStartOf="@+id/imageView49"
        app:layout_constraintTop_toBottomOf="@+id/imageView49" />

    <View
        android:id="@+id/view41"
        android:layout_width="@dimen/x580"
        android:layout_height="@dimen/x2"
        android:background="#E4E4E4"
        app:layout_constraintBottom_toBottomOf="@+id/textView75"
        app:layout_constraintEnd_toEndOf="@+id/imageView49"
        app:layout_constraintStart_toStartOf="@+id/imageView49" />

    <TextView
        android:id="@+id/textView76"
        android:layout_width="0dp"
        android:layout_height="@dimen/x80"
        android:background="@drawable/r4_bottom_white_normal"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/x16"
        android:text="查看全文"
        android:textColor="#444444"
        android:textSize="@dimen/x26"
        app:layout_constraintEnd_toEndOf="@+id/textView75"
        app:layout_constraintStart_toStartOf="@+id/textView75"
        app:layout_constraintTop_toBottomOf="@+id/view41" />

    <ImageView
        android:id="@+id/imageView50"
        android:layout_width="@dimen/x20"
        android:layout_height="@dimen/x20"
        android:layout_marginRight="@dimen/x16"
        app:layout_constraintBottom_toBottomOf="@+id/textView76"
        app:layout_constraintEnd_toEndOf="@+id/textView76"
        app:layout_constraintTop_toBottomOf="@+id/view41"
        app:srcCompat="@mipmap/icon_more" />
</android.support.constraint.ConstraintLayout>