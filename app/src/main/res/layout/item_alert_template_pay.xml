<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/view14"
        android:layout_width="@dimen/x580"
        android:layout_height="@dimen/x460"
        android:background="@drawable/r30_white_alert"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/ibtn_close"
        android:layout_width="@dimen/x80"
        android:layout_height="@dimen/x80"
        android:background="@drawable/r8_white_btn"
        android:src="@mipmap/icon_cancel_black"
        app:layout_constraintEnd_toEndOf="@+id/view14"
        app:layout_constraintTop_toTopOf="@+id/view14" />

    <TextView
        android:id="@+id/tv_native"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/x44"
        android:layout_marginTop="@dimen/x8"
        android:text="TextView"
        android:textColor="#191919"
        android:textSize="@dimen/x36"
        app:layout_constraintEnd_toEndOf="@+id/view14"
        app:layout_constraintStart_toStartOf="@+id/view14"
        app:layout_constraintTop_toBottomOf="@+id/ibtn_close"
        tools:text="确认购买？" />

    <TextView
        android:id="@+id/textView50"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x32"
        android:textColor="#929292"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="@dimen/x16"
        android:textSize="@dimen/x34"
        app:layout_constraintEnd_toEndOf="@+id/view14"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@+id/view14"
        app:layout_constraintTop_toBottomOf="@+id/tv_native"
        android:text="该模板需要支付49.88元，\n购买后永久使用（规则暂定）" />

    <TextView
        android:id="@+id/textView51"
        android:layout_width="@dimen/x420"
        android:layout_height="@dimen/x72"
        android:layout_marginTop="@dimen/x42"
        android:background="@drawable/r60_main_btn"
        android:gravity="center"
        android:text="立即购买"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/x30"
        app:layout_constraintEnd_toEndOf="@+id/view14"
        app:layout_constraintStart_toStartOf="@+id/view14"
        app:layout_constraintTop_toBottomOf="@+id/textView50" />


</android.support.constraint.ConstraintLayout>