<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:mActivity=".MainActivity">

    <ImageView
        android:id="@+id/take_photo_mask"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/take_photo_mask"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/ibtn_cancel"
        android:layout_width="@dimen/x98"
        android:layout_height="@dimen/x98"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/r60_white_btn"
        android:padding="@dimen/x32"
        android:src="@mipmap/icon_cancel_black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/x70"
        android:text="请保持正对镜头"
        android:textColor="#9A9A9A"
        android:textSize="@dimen/x32"
        app:layout_constraintBottom_toTopOf="@+id/btn_take_photo"
        app:layout_constraintEnd_toEndOf="@+id/btn_take_photo"
        app:layout_constraintStart_toStartOf="@+id/btn_take_photo" />

    <Button
        android:id="@+id/btn_take_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/x32"
        android:layout_marginEnd="@dimen/x32"
        android:layout_marginBottom="@dimen/x125"
        android:background="@drawable/sign_btn"
        android:padding="@dimen/x20"
        android:text="拍摄"
        android:textColor="#ffffff"
        android:textSize="@dimen/x36"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>