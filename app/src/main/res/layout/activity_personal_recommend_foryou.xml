<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:layout_height="match_parent">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="0dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="@dimen/x88"
                android:layout_height="@dimen/x88"
                android:paddingLeft="@dimen/x34"
                android:paddingTop="@dimen/x30"
                android:paddingRight="@dimen/x36"
                android:paddingBottom="@dimen/x26"
                android:background="@drawable/ra_white_btn"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@mipmap/icon_back_black" />

            <TextView
                android:id="@+id/textView54"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x46"
                android:layout_marginTop="@dimen/x40"
                android:text="精彩推荐"
                android:textColor="#333333"
                android:textSize="@dimen/x40"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_back" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view_activity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView54" />


            <TextView
                android:id="@+id/textView55"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x46"
                android:layout_marginTop="@dimen/x10"
                android:text="推荐模板"
                android:textColor="#333333"
                android:textSize="@dimen/x40"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/recycler_view_activity" />

            <TextView
                android:id="@+id/tv_demo_more"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/x54"
                android:layout_marginTop="@dimen/x14"
                android:text="查看更多"
                android:textSize="@dimen/x24"
                android:textColor="#9d9d9d"
                android:gravity="center"
                app:layout_constraintEnd_toStartOf="@+id/iv_demo_more"
                app:layout_constraintTop_toBottomOf="@+id/recycler_view_activity" />

            <ImageView
                android:id="@+id/iv_demo_more"
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/x20"
                android:layout_marginRight="@dimen/x26"
                app:layout_constraintBottom_toBottomOf="@+id/tv_demo_more"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_demo_more"
                app:srcCompat="@mipmap/icon_more" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view_demo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x20"
                android:paddingLeft="@dimen/x32"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView55" />

            <TextView
                android:id="@+id/textView57"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x46"
                android:layout_marginTop="@dimen/x38"
                android:text="推荐设计师"
                android:textColor="#333333"
                android:textSize="@dimen/x40"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/recycler_view_demo" />

            <TextView
                android:id="@+id/tv_designer_more"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/x54"
                android:layout_marginTop="@dimen/x40"
                android:gravity="center"
                android:text="查看更多"
                android:textColor="#9d9d9d"
                android:textSize="@dimen/x24"
                app:layout_constraintEnd_toStartOf="@+id/iv_designer_more"
                app:layout_constraintTop_toBottomOf="@+id/recycler_view_demo" />

            <ImageView
                android:id="@+id/iv_designer_more"
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/x20"
                android:layout_marginRight="@dimen/x26"
                app:layout_constraintBottom_toBottomOf="@+id/tv_designer_more"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_designer_more"
                app:srcCompat="@mipmap/icon_more" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view_designer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x32"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView57" />

            <TextView
                android:id="@+id/textView59"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x46"
                android:layout_marginTop="@dimen/x50"
                android:text="推荐视频"
                android:textColor="#333333"
                android:textSize="@dimen/x40"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/recycler_view_designer" />

            <TextView
                android:id="@+id/tv_video_more"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/x54"
                android:layout_marginTop="@dimen/x52"
                android:gravity="center"
                android:text="查看更多"
                android:textColor="#9d9d9d"
                android:textSize="@dimen/x24"
                app:layout_constraintEnd_toStartOf="@+id/iv_video_more"
                app:layout_constraintTop_toBottomOf="@+id/recycler_view_designer" />

            <ImageView
                android:id="@+id/iv_video_more"
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/x20"
                android:layout_marginRight="@dimen/x26"
                app:layout_constraintBottom_toBottomOf="@+id/tv_video_more"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_video_more"
                app:srcCompat="@mipmap/icon_more" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view_video"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x20"
                android:paddingLeft="@dimen/x10"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView59" />

            <TextView
                android:id="@+id/textView61"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x46"
                android:layout_marginTop="@dimen/x50"
                android:text="推荐用户"
                android:textColor="#333333"
                android:textSize="@dimen/x40"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/recycler_view_video" />

            <TextView
                android:id="@+id/tv_user_more"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/x54"
                android:layout_marginTop="@dimen/x52"
                android:gravity="center"
                android:text="查看更多"
                android:textColor="#9d9d9d"
                android:textSize="@dimen/x24"
                app:layout_constraintEnd_toStartOf="@+id/iv_user_more"
                app:layout_constraintTop_toBottomOf="@+id/recycler_view_video" />

            <ImageView
                android:id="@+id/iv_user_more"
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/x20"
                android:layout_marginRight="@dimen/x26"
                app:layout_constraintBottom_toBottomOf="@+id/tv_user_more"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_user_more"
                app:srcCompat="@mipmap/icon_more" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view_user"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x32"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView61" />

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/x40"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/recycler_view_user"/>

        </android.support.constraint.ConstraintLayout>

    </android.support.v4.widget.NestedScrollView>


</android.support.constraint.ConstraintLayout>