<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#202020"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/tv_back"
        android:layout_width="@dimen/x96"
        android:layout_height="@dimen/x96"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="24dp"
        android:background="@drawable/ra_transparent_btn"
        android:padding="@dimen/x30"
        android:scaleType="centerCrop"
        android:src="@drawable/icon_back_white"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_next"
        android:layout_width="@dimen/x140"
        android:layout_height="@dimen/x96"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="下一步"
        android:textColor="#D8D8D8"
        android:textSize="@dimen/x32"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_edit"
        android:layout_width="@dimen/x160"
        android:layout_height="@dimen/x96"
        android:background="@drawable/ra_black_btn"
        android:gravity="center"
        android:paddingLeft="@dimen/x30"
        android:paddingRight="@dimen/x30"
        android:text="存草稿"
        android:textColor="#999999"
        android:textSize="@dimen/x32"
        app:layout_constraintBottom_toBottomOf="@+id/tv_next"
        app:layout_constraintEnd_toStartOf="@+id/tv_next"
        app:layout_constraintTop_toTopOf="@+id/tv_next" />

    <ImageView
        android:id="@+id/imageView33"
        android:layout_width="@dimen/x66"
        android:layout_height="@dimen/x66"
        android:layout_marginStart="8dp"
        android:padding="@dimen/x16"
        android:src="@mipmap/icon_video_create_add"
        app:layout_constraintEnd_toEndOf="@+id/tv_back"
        app:layout_constraintStart_toStartOf="@+id/tv_back"
        app:layout_constraintTop_toBottomOf="@+id/tv_back" />

    <TextView
        android:id="@+id/textView72"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/x66"
        android:gravity="center"
        android:text="批量导入"
        android:textColor="#F9F9F9FF"
        android:textSize="@dimen/x28"
        app:layout_constraintBottom_toBottomOf="@+id/imageView33"
        app:layout_constraintStart_toEndOf="@+id/imageView33"
        app:layout_constraintTop_toBottomOf="@+id/tv_back" />

    <FrameLayout
        android:id="@+id/fl_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/x94"
        android:layout_marginEnd="@dimen/x94"
        app:layout_constraintBottom_toTopOf="@+id/rcv_list_thumb"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView72"
        app:layout_constraintVertical_weight="1" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rcv_list_thumb"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x184"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.vivwe.video.ui.TestAssetEditLayout
        android:id="@+id/tael_text_edit"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>