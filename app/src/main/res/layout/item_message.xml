<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="0dp"
        android:layout_height="@dimen/x122"
        android:background="@drawable/ra_white_btn"
        android:ellipsize="end"
        android:paddingStart="@dimen/x136"
        android:paddingTop="@dimen/x62"
        android:paddingRight="@dimen/x136"
        android:singleLine="true"
        android:text="消息内容消息内容消息内容消息内容"
        android:textColor="#A2A6A9"
        android:textSize="@dimen/x28"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_recommend" />

    <ImageView
        android:id="@+id/iv_type"
        android:layout_width="@dimen/x88"
        android:layout_height="@dimen/x88"
        android:layout_marginLeft="@dimen/x28"
        app:layout_constraintBottom_toBottomOf="@+id/tv_content"
        app:layout_constraintStart_toStartOf="@+id/tv_content"
        app:layout_constraintTop_toTopOf="@+id/tv_content"
        app:srcCompat="@mipmap/icon_mesage_notice" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginTop="@dimen/x2"
        android:text="系统通知"
        android:textColor="#191e24"
        android:textSize="@dimen/x32"
        app:layout_constraintStart_toEndOf="@+id/iv_type"
        app:layout_constraintTop_toTopOf="@+id/iv_type" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x18"
        android:layout_marginRight="@dimen/x28"
        android:text="08:49"
        android:textColor="#b6b6b6"
        android:textSize="@dimen/x22"
        app:layout_constraintEnd_toEndOf="@+id/tv_content"
        app:layout_constraintTop_toTopOf="@+id/tv_content" />

    <TextView
        android:id="@+id/tv_number"
        android:layout_width="@dimen/x36"
        android:layout_height="@dimen/x36"
        android:background="@drawable/r18_red_normal"
        android:gravity="center"
        android:text="99"
        android:textColor="#ffffff"
        android:textSize="@dimen/x20"
        app:layout_constraintBottom_toBottomOf="@+id/tv_content"
        app:layout_constraintEnd_toEndOf="@+id/tv_time"
        app:layout_constraintTop_toBottomOf="@+id/tv_time" />

    <View
        android:id="@+id/view40"
        android:layout_width="@dimen/x620"
        android:layout_height="@dimen/x2"
        android:background="#f4f4f4"
        app:layout_constraintBottom_toBottomOf="@+id/tv_content"
        app:layout_constraintEnd_toEndOf="@+id/tv_content" />

</android.support.constraint.ConstraintLayout>