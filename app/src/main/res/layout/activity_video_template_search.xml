<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">


    <EditText
        android:id="@+id/edt_search"
        android:layout_width="@dimen/x604"
        android:layout_height="@dimen/x64"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginTop="@dimen/x20"
        android:background="@drawable/r16_gray_normal"
        android:hint="搜索模板"
        android:paddingLeft="@dimen/x62"
        android:textColor="#191919"
        android:textColorHint="#c2c2c2"
        android:textSize="@dimen/x28"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView43"
        android:layout_width="@dimen/x40"
        android:layout_height="@dimen/x40"
        android:layout_marginLeft="@dimen/x16"
        app:layout_constraintBottom_toBottomOf="@+id/edt_search"
        app:layout_constraintStart_toStartOf="@+id/edt_search"
        app:layout_constraintTop_toTopOf="@+id/edt_search"
        app:srcCompat="@mipmap/icon_video_search_small" />

    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="@dimen/x96"
        android:layout_height="@dimen/x68"
        android:layout_marginRight="@dimen/x10"
        android:background="@drawable/ra_white_btn"
        android:gravity="center"
        android:text="取消"
        android:textColor="#606060"
        android:textSize="@dimen/x28"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/edt_search"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/edt_search" />

    <ImageView
        android:id="@+id/iv_clear"
        android:layout_width="@dimen/x48"
        android:layout_height="@dimen/x48"
        android:layout_marginRight="@dimen/x20"
        android:padding="@dimen/x12"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/edt_search"
        app:layout_constraintEnd_toEndOf="@+id/edt_search"
        app:layout_constraintTop_toTopOf="@+id/edt_search"
        app:srcCompat="@mipmap/icon_cancel_black" />

    <View
        android:id="@+id/view31"
        android:layout_width="@dimen/x8"
        android:layout_height="@dimen/x28"
        android:layout_marginLeft="@dimen/x32"
        android:layout_marginTop="@dimen/x48"
        android:background="@drawable/app_bg_h1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView43" />

    <TextView
        android:id="@+id/textView87"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x14"
        android:text="热门搜索"
        android:textColor="#929292"
        android:textSize="@dimen/x32"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/view31"
        app:layout_constraintStart_toEndOf="@+id/view31"
        app:layout_constraintTop_toTopOf="@+id/view31" />

    <android.support.constraint.Group
        android:id="@+id/group_popular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:constraint_referenced_ids="textView87,view31" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/x34"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_search" />

</android.support.constraint.ConstraintLayout>