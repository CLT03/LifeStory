<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F3F3">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="@dimen/x88"
        android:background="#191919"
        android:gravity="center"
        android:text="音乐库"
        android:textColor="#ffffff"
        android:textSize="@dimen/x32"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="@dimen/x88"
        android:layout_height="0dp"
        android:paddingLeft="@dimen/x34"
        android:paddingTop="@dimen/x30"
        android:paddingRight="@dimen/x36"
        android:paddingBottom="@dimen/x26"
        app:layout_constraintBottom_toBottomOf="@+id/tv_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_title"
        app:srcCompat="@mipmap/icon_back_white" />

    <TextView
        android:id="@+id/tv_local"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/x56"
        android:layout_marginRight="@dimen/x15"
        android:gravity="center"
        android:text="本地音乐"
        android:textColor="#8B8B8B"
        android:textSize="@dimen/x28"
        app:layout_constraintBottom_toBottomOf="@+id/tv_title"
        app:layout_constraintEnd_toEndOf="@+id/tv_title"
        app:layout_constraintTop_toTopOf="@+id/tv_title" />

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="0dp"
        android:layout_height="@dimen/x88"
        android:overScrollMode="never"
        android:scrollbars="none"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title">

        <android.support.constraint.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#ffffff">


            <TextView
                android:id="@+id/tv_title1"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:gravity="center"
                android:paddingLeft="@dimen/x20"
                android:paddingRight="@dimen/x20"
                android:text="推荐"
                android:textColor="#8e8e8e"
                android:textSize="@dimen/x28"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/view_title1"
                android:layout_width="@dimen/x28"
                android:layout_height="@dimen/x4"
                android:layout_marginBottom="@dimen/x14"
                android:background="@drawable/app_bg_h"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/tv_title1"
                app:layout_constraintEnd_toEndOf="@+id/tv_title1"
                app:layout_constraintStart_toStartOf="@+id/tv_title1" />

            <TextView
                android:id="@+id/tv_title2"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:gravity="center"
                android:paddingLeft="@dimen/x20"
                android:paddingRight="@dimen/x20"
                android:text="舞蹈"
                android:textColor="#8e8e8e"
                android:textSize="@dimen/x28"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tv_title1"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/view_title2"
                android:layout_width="@dimen/x28"
                android:layout_height="@dimen/x4"
                android:layout_marginBottom="@dimen/x14"
                android:background="@drawable/app_bg_h"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/tv_title2"
                app:layout_constraintEnd_toEndOf="@+id/tv_title2"
                app:layout_constraintStart_toStartOf="@+id/tv_title2" />

            <TextView
                android:id="@+id/tv_title3"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:gravity="center"
                android:paddingLeft="@dimen/x20"
                android:paddingRight="@dimen/x20"
                android:text="软萌"
                android:textColor="#8e8e8e"
                android:textSize="@dimen/x28"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tv_title2"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/view_title3"
                android:layout_width="@dimen/x28"
                android:layout_height="@dimen/x4"
                android:layout_marginBottom="@dimen/x14"
                android:background="@drawable/app_bg_h"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/tv_title3"
                app:layout_constraintEnd_toEndOf="@+id/tv_title3"
                app:layout_constraintStart_toStartOf="@+id/tv_title3" />

            <TextView
                android:id="@+id/tv_title4"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:gravity="center"
                android:paddingLeft="@dimen/x20"
                android:paddingRight="@dimen/x20"
                android:text="爱情"
                android:textColor="#8e8e8e"
                android:textSize="@dimen/x28"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tv_title3"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/view_title4"
                android:layout_width="@dimen/x28"
                android:layout_height="@dimen/x4"
                android:layout_marginBottom="@dimen/x14"
                android:background="@drawable/app_bg_h"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/tv_title4"
                app:layout_constraintEnd_toEndOf="@+id/tv_title4"
                app:layout_constraintStart_toStartOf="@+id/tv_title4" />

            <TextView
                android:id="@+id/tv_title5"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:gravity="center"
                android:paddingLeft="@dimen/x20"
                android:paddingRight="@dimen/x20"
                android:text="搞怪"
                android:textColor="#8e8e8e"
                android:textSize="@dimen/x28"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tv_title4"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/view_title5"
                android:layout_width="@dimen/x28"
                android:layout_height="@dimen/x4"
                android:layout_marginBottom="@dimen/x14"
                android:background="@drawable/app_bg_h"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/tv_title5"
                app:layout_constraintEnd_toEndOf="@+id/tv_title5"
                app:layout_constraintStart_toStartOf="@+id/tv_title5" />

            <TextView
                android:id="@+id/tv_title6"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:gravity="center"
                android:paddingLeft="@dimen/x20"
                android:paddingRight="@dimen/x20"
                android:text="表演"
                android:textColor="#8e8e8e"
                android:textSize="@dimen/x28"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tv_title5"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/view_title6"
                android:layout_width="@dimen/x28"
                android:layout_height="@dimen/x4"
                android:layout_marginBottom="@dimen/x14"
                android:background="@drawable/app_bg_h"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/tv_title6"
                app:layout_constraintEnd_toEndOf="@+id/tv_title6"
                app:layout_constraintStart_toStartOf="@+id/tv_title6" />

            <TextView
                android:id="@+id/tv_title7"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:gravity="center"
                android:paddingLeft="@dimen/x20"
                android:paddingRight="@dimen/x20"
                android:text="流行"
                android:textColor="#8e8e8e"
                android:textSize="@dimen/x28"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tv_title6"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/view_title7"
                android:layout_width="@dimen/x28"
                android:layout_height="@dimen/x4"
                android:layout_marginBottom="@dimen/x14"
                android:background="@drawable/app_bg_h"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/tv_title7"
                app:layout_constraintEnd_toEndOf="@+id/tv_title7"
                app:layout_constraintStart_toStartOf="@+id/tv_title7" />

            <TextView
                android:id="@+id/tv_title8"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:gravity="center"
                android:paddingLeft="@dimen/x20"
                android:paddingRight="@dimen/x20"
                android:text="电音"
                android:textColor="#8e8e8e"
                android:textSize="@dimen/x28"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tv_title7"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/view_title8"
                android:layout_width="@dimen/x28"
                android:layout_height="@dimen/x4"
                android:layout_marginBottom="@dimen/x14"
                android:background="@drawable/app_bg_h"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/tv_title8"
                app:layout_constraintEnd_toEndOf="@+id/tv_title8"
                app:layout_constraintStart_toStartOf="@+id/tv_title8" />
        </android.support.constraint.ConstraintLayout>
    </HorizontalScrollView>


    <TextView
        android:id="@+id/tv_search"
        android:layout_width="@dimen/x702"
        android:layout_height="@dimen/x64"
        android:layout_marginTop="@dimen/x8"
        android:background="@drawable/r4_white_normal"
        android:text="搜索服务器音乐"
        android:paddingLeft="@dimen/x62"
        android:textColor="#9b9b9b"
        android:gravity="center_vertical"
        android:textSize="@dimen/x26"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView" />

    <ImageView
        android:id="@+id/imageView42"
        android:layout_width="@dimen/x40"
        android:layout_height="@dimen/x40"
        android:layout_marginLeft="@dimen/x16"
        app:layout_constraintBottom_toBottomOf="@+id/tv_search"
        app:layout_constraintStart_toStartOf="@+id/tv_search"
        app:layout_constraintTop_toTopOf="@+id/tv_search"
        app:srcCompat="@mipmap/icon_video_search_small" />

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/x10"
        android:background="#ffffff"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/tv_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_search" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="0dp"
        android:layout_height="@dimen/x172"
        android:background="#373842"
        android:paddingLeft="@dimen/x34"
        android:paddingTop="@dimen/x96"
        android:text="Havana"
        android:textColor="#ffffff"
        android:textSize="@dimen/x32"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x92"
        android:layout_marginTop="@dimen/x36"
        android:text="00:00"
        android:textColor="#ffffff"
        android:textSize="@dimen/x24"
        app:layout_constraintStart_toStartOf="@+id/tv_name"
        app:layout_constraintTop_toTopOf="@+id/tv_name" />

    <TextView
        android:id="@+id/tv_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x36"
        android:layout_marginRight="@dimen/x24"
        android:text="00:00"
        android:textColor="#ffffff"
        android:textSize="@dimen/x24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_name" />

    <ImageView
        android:id="@+id/iv_play"
        android:layout_width="@dimen/x88"
        android:layout_height="@dimen/x88"
        android:layout_marginLeft="@dimen/x4"
        android:layout_marginTop="@dimen/x10"
        android:padding="@dimen/x20"
        app:layout_constraintStart_toStartOf="@+id/tv_name"
        app:layout_constraintTop_toTopOf="@+id/tv_name"
        app:srcCompat="@mipmap/icon_music_pause" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="0dp"
        android:layout_height="@dimen/x64"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="@dimen/x20"
        android:maxHeight="@dimen/x4"
        android:progressDrawable="@drawable/music_seekbar"
        app:layout_constraintBottom_toBottomOf="@+id/tv_start"
        app:layout_constraintEnd_toStartOf="@+id/tv_end"
        app:layout_constraintStart_toEndOf="@+id/tv_start"
        app:layout_constraintTop_toTopOf="@+id/tv_start" />

    <TextView
        android:id="@+id/btn_use"
        android:layout_width="@dimen/x108"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/x26"
        android:layout_marginBottom="@dimen/x30"
        android:background="@drawable/sign_btn"
        android:gravity="center"
        android:text="使用"
        android:textColor="#ffffff"
        android:textSize="@dimen/x28"
        app:layout_constraintBottom_toBottomOf="@+id/tv_name"
        app:layout_constraintEnd_toEndOf="parent" />

</android.support.constraint.ConstraintLayout>