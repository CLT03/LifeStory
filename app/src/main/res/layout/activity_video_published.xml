<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#181818">

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="@dimen/x88"
        android:layout_height="@dimen/x88"
        android:paddingLeft="@dimen/x34"
        android:paddingTop="@dimen/x30"
        android:paddingRight="@dimen/x36"
        android:paddingBottom="@dimen/x26"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/icon_back_white" />

    <TextView
        android:id="@+id/tv_complete"
        android:layout_width="@dimen/x100"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x24"
        android:layout_marginEnd="@dimen/x14"
        android:gravity="center"
        android:text="完成"
        android:textColor="#ffffff"
        android:textSize="@dimen/x32"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x178"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/icon_video_published" />

    <TextView
        android:id="@+id/tv_had_save"
        android:layout_width="@dimen/x304"
        android:layout_height="@dimen/x100"
        android:background="@drawable/r10_black_noc"
        android:gravity="center"
        android:text="已保存到本地"
        android:textColor="#f9f9f9"
        android:textSize="@dimen/x28"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/tv_share"
        android:layout_width="@dimen/x460"
        android:layout_height="@dimen/x98"
        android:layout_marginBottom="@dimen/x240"
        android:background="@drawable/sign_btn"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/x180"
        android:text="分享给好友"
        android:textColor="#ffffff"
        android:textSize="@dimen/x28"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="@dimen/x36"
        android:layout_height="@dimen/x36"
        android:layout_marginLeft="@dimen/x134"
        app:layout_constraintBottom_toBottomOf="@+id/tv_share"
        app:layout_constraintStart_toStartOf="@+id/tv_share"
        app:layout_constraintTop_toTopOf="@+id/tv_share"
        app:srcCompat="@mipmap/icon_video_publiashed_share" />

</android.support.constraint.ConstraintLayout>