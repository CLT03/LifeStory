<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/iv_image"
        android:layout_width="@dimen/x174"
        android:layout_height="@dimen/x174"
        android:background="@color/transparent"
        android:src="@mipmap/icon_back_black"
        android:layout_margin="@dimen/x8"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_edit"
        android:layout_width="@dimen/x76"
        android:layout_height="@dimen/x76"
        android:background="@drawable/ra_transparent_btn"
        android:padding="@dimen/x8"
        android:src="@mipmap/icon_video_edit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/iv_choose"
        android:layout_width="@dimen/x76"
        android:layout_height="@dimen/x76"
        android:padding="@dimen/x16"
        android:src="@mipmap/icon_check"
        app:layout_constraintStart_toStartOf="@+id/iv_image"
        app:layout_constraintTop_toTopOf="@+id/iv_image" />
</android.support.constraint.ConstraintLayout>