        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:paddingSize="20"
        android:layout_marginBottom="8dp"
        android:background="@color/colorSkyBlue"
        app:mCornerSize="200"
        app:titleText="asdf"
        app:titleTextSize="@dimen/x10"
